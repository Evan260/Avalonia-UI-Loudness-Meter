<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="using:AvaloniaUILoudnessMeter"
             x:Class="AvaloniaUILoudnessMeter.App"
             RequestedThemeVariant="Default">
             <!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options. -->

    <Application.DataTemplates>
        <local:ViewLocator/>
    </Application.DataTemplates>

     <Application.Styles>
         <FluentTheme />
         <StyleInclude Source="avares://AvaloniaUILoudnessMeter/Styles/LargeLabelControl.axaml"/>
         <StyleInclude Source="avares://AvaloniaUILoudnessMeter/Styles/AnimatedPopup.axaml"/>
     </Application.Styles>

     <Application.Resources>
         <ResourceDictionary>
             <SolidColorBrush x:Key="MediumGrayBrush" Color="#e5e5e5"/>
             <SolidColorBrush x:Key="LightBlueBrush" Color="#606875"/>
             <SolidColorBrush x:Key="MidBlueBrush" Color="#373c44"/>
             <SolidColorBrush x:Key="DarkBlueBrush" Color="#1a1c20"/>
             <SolidColorBrush x:Key="BrightBlueBrush" Color="#7f98c7"/>
             <SolidColorBrush x:Key="BrightBlueHoverBrush" Color="#98acd0"/>
             <SolidColorBrush x:Key="FadedRedBrush" Color="#bc7c7a"/>
         </ResourceDictionary>
     </Application.Resources>
</Application>